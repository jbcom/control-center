#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/workspace/node_modules/.pnpm/cursor-background-agent-mcp-server@1.0.3/node_modules/cursor-background-agent-mcp-server/dist/node_modules:/workspace/node_modules/.pnpm/cursor-background-agent-mcp-server@1.0.3/node_modules/cursor-background-agent-mcp-server/node_modules:/workspace/node_modules/.pnpm/cursor-background-agent-mcp-server@1.0.3/node_modules:/workspace/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/workspace/node_modules/.pnpm/cursor-background-agent-mcp-server@1.0.3/node_modules/cursor-background-agent-mcp-server/dist/node_modules:/workspace/node_modules/.pnpm/cursor-background-agent-mcp-server@1.0.3/node_modules/cursor-background-agent-mcp-server/node_modules:/workspace/node_modules/.pnpm/cursor-background-agent-mcp-server@1.0.3/node_modules:/workspace/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../../dist/mcpStdioServer.js" "$@"
else
  exec node  "$basedir/../../dist/mcpStdioServer.js" "$@"
fi
