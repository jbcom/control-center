{
  "$schema": "./schemas/triage-hub.schema.json",
  "version": "1.0.0",
  "organization": "jbcom",
  "description": "Centralized triage hub for jbcom ecosystem - manages all AI agent operations from private control center",

  "projects": {
    "roadmap": {
      "name": "Ecosystem Roadmap",
      "id_var": "ROADMAP_PROJECT_ID",
      "description": "Quarterly planning and feature roadmap"
    },
    "integration": {
      "name": "Ecosystem Integration",
      "id_var": "INTEGRATION_PROJECT_ID",
      "description": "Cross-package integration and dependency tracking"
    }
  },

  "ecosystems": {
    "python": {
      "language": "Python",
      "package_manager": "pip/pypi",
      "doc_patterns": ["docs/", "README.md", "pyproject.toml"],
      "test_command": "pytest",
      "lint_command": "ruff check",
      "release_workflow": "release.yml",
      "packages": {
        "python-agentic-crew": {
          "description": "Multi-agent orchestration framework",
          "dependencies": ["python-lifecyclelogging", "python-extended-data-types"],
          "consumers": [],
          "pypi_name": "agentic-crew",
          "doc_url": "https://crew.agentic.dev"
        },
        "python-vendor-connectors": {
          "description": "API connectors for external vendors",
          "dependencies": ["python-lifecyclelogging"],
          "consumers": ["python-agentic-crew"],
          "pypi_name": "vendor-connectors",
          "doc_url": "https://github.com/jbcom/python-vendor-connectors#readme"
        },
        "python-extended-data-types": {
          "description": "Extended Python data types",
          "dependencies": [],
          "consumers": ["python-agentic-crew", "python-directed-inputs-class"],
          "pypi_name": "extended-data-types",
          "doc_url": "https://github.com/jbcom/python-extended-data-types#readme"
        },
        "python-directed-inputs-class": {
          "description": "Type-safe input validation",
          "dependencies": ["python-extended-data-types"],
          "consumers": [],
          "pypi_name": "directed-inputs-class",
          "doc_url": "https://github.com/jbcom/python-directed-inputs-class#readme"
        },
        "python-lifecyclelogging": {
          "description": "Flexible Python logging library",
          "dependencies": [],
          "consumers": ["python-vendor-connectors", "python-agentic-crew", "python-terraform-bridge"],
          "pypi_name": "lifecyclelogging",
          "doc_url": "https://github.com/jbcom/python-lifecyclelogging#readme"
        },
        "python-terraform-bridge": {
          "description": "Python to Terraform module generator",
          "dependencies": ["python-lifecyclelogging"],
          "consumers": [],
          "pypi_name": "python-terraform-bridge",
          "doc_url": "https://github.com/jbcom/python-terraform-bridge#readme"
        },
        "python-rivers-of-reckoning": {
          "description": "Game project",
          "dependencies": [],
          "consumers": [],
          "pypi_name": null,
          "doc_url": "https://github.com/jbcom/python-rivers-of-reckoning#readme"
        },
        "python-ai-game-dev": {
          "description": "AI-powered game development",
          "dependencies": [],
          "consumers": [],
          "pypi_name": null,
          "doc_url": "https://github.com/jbcom/python-ai-game-dev#readme"
        }
      }
    },

    "typescript": {
      "language": "TypeScript",
      "package_manager": "npm/pnpm",
      "doc_patterns": ["docs/", "README.md", "package.json"],
      "test_command": "vitest",
      "lint_command": "eslint",
      "release_workflow": "release.yml",
      "packages": {
        "nodejs-agentic-control": {
          "description": "Core AI agent control framework",
          "dependencies": [],
          "consumers": ["nodejs-agentic-triage"],
          "npm_name": "agentic-control",
          "doc_url": "https://control.agentic.dev"
        },
        "nodejs-agentic-triage": {
          "description": "AI-powered GitHub triage CLI",
          "dependencies": ["nodejs-agentic-control"],
          "consumers": [],
          "npm_name": "agentic-triage",
          "doc_url": "https://triage.agentic.dev"
        },
        "nodejs-strata": {
          "description": "Procedural 3D graphics for React Three Fiber",
          "dependencies": [],
          "consumers": [
            "nodejs-strata-shaders",
            "nodejs-strata-presets",
            "nodejs-strata-examples",
            "nodejs-strata-typescript-tutor",
            "nodejs-strata-react-native-plugin",
            "nodejs-strata-capacitor-plugin",
            "nodejs-rivermarsh",
            "nodejs-otter-river-rush"
          ],
          "npm_name": "@strata/core",
          "doc_url": "https://strata.game/docs"
        },
        "nodejs-strata-shaders": {
          "description": "GLSL shader collection for Strata 3D",
          "dependencies": ["nodejs-strata"],
          "consumers": [],
          "npm_name": "@strata/shaders",
          "doc_url": "https://shaders.strata.game"
        },
        "nodejs-strata-presets": {
          "description": "Preset configurations for Strata 3D",
          "dependencies": ["nodejs-strata"],
          "consumers": [],
          "npm_name": "@strata/presets",
          "doc_url": "https://presets.strata.game"
        },
        "nodejs-strata-examples": {
          "description": "Interactive examples for Strata 3D",
          "dependencies": ["nodejs-strata"],
          "consumers": [],
          "npm_name": "@strata/examples",
          "doc_url": "https://examples.strata.game"
        },
        "nodejs-strata-typescript-tutor": {
          "description": "Professor Pixel educational platform",
          "dependencies": ["nodejs-strata"],
          "consumers": [],
          "npm_name": "@strata/studio",
          "doc_url": "https://learn.strata.game"
        },
        "nodejs-strata-react-native-plugin": {
          "description": "React Native support for Strata 3D",
          "dependencies": ["nodejs-strata"],
          "consumers": [],
          "npm_name": "@strata/react-native",
          "doc_url": "https://react-native.strata.game"
        },
        "nodejs-strata-capacitor-plugin": {
          "description": "Capacitor support for Strata 3D",
          "dependencies": ["nodejs-strata"],
          "consumers": [],
          "npm_name": "@strata/capacitor",
          "doc_url": "https://capacitor.strata.game"
        },
        "nodejs-rivermarsh": {
          "description": "Mobile-first 3D exploration game",
          "dependencies": ["nodejs-strata"],
          "consumers": [],
          "npm_name": null,
          "doc_url": "https://github.com/jbcom/nodejs-rivermarsh#readme"
        },
        "nodejs-otter-river-rush": {
          "description": "River adventure game",
          "dependencies": ["nodejs-strata"],
          "consumers": [],
          "npm_name": null,
          "doc_url": "https://github.com/jbcom/nodejs-otter-river-rush#readme"
        },
        "nodejs-otterfall": {
          "description": "Waterfall game",
          "dependencies": [],
          "consumers": [],
          "npm_name": null,
          "doc_url": "https://github.com/jbcom/nodejs-otterfall#readme"
        },
        "nodejs-pixels-pygame-palace": {
          "description": "Pixel art game platform",
          "dependencies": [],
          "consumers": [],
          "npm_name": null,
          "doc_url": "https://github.com/jbcom/nodejs-pixels-pygame-palace#readme"
        }
      }
    },

    "go": {
      "language": "Go",
      "package_manager": "go modules",
      "doc_patterns": ["docs/", "README.md", "go.mod"],
      "test_command": "go test ./...",
      "lint_command": "golangci-lint run",
      "release_workflow": "release.yml",
      "packages": {
        "go-port-api": {
          "description": "Multi-language port API",
          "dependencies": [],
          "consumers": [],
          "go_module": "github.com/jbcom/go-port-api",
          "doc_url": "https://github.com/jbcom/go-port-api#readme"
        },
        "go-vault-secret-sync": {
          "description": "Vault to cloud secret synchronization",
          "dependencies": [],
          "consumers": [],
          "go_module": "github.com/jbcom/go-vault-secret-sync",
          "doc_url": "https://github.com/jbcom/go-vault-secret-sync#readme"
        },
        "go-secretsync": {
          "description": "Enterprise-grade secret synchronization pipeline",
          "dependencies": [],
          "consumers": [],
          "go_module": "github.com/jbcom/go-secretsync",
          "doc_url": "https://github.com/jbcom/go-secretsync#readme"
        }
      }
    },

    "terraform": {
      "language": "HCL",
      "package_manager": "terraform registry",
      "doc_patterns": ["docs/", "README.md", "*.tf"],
      "test_command": "terraform validate",
      "lint_command": "tflint",
      "release_workflow": "release.yml",
      "packages": {
        "terraform-github-markdown": {
          "description": "GitHub markdown Terraform module",
          "dependencies": [],
          "consumers": [],
          "doc_url": "https://github.com/jbcom/terraform-github-markdown#readme"
        },
        "terraform-repository-automation": {
          "description": "Repository automation Terraform module",
          "dependencies": [],
          "consumers": [],
          "doc_url": "https://github.com/jbcom/terraform-repository-automation#readme"
        }
      }
    }
  },

  "triage": {
    "centralized": true,
    "description": "All AI agent operations are managed from jbcom/control-center",
    "strategies": {
      "issue_assessment": {
        "enabled": true,
        "auto_label": true,
        "auto_assign": true,
        "update_project": true
      },
      "pr_review": {
        "enabled": true,
        "require_ai_review": true,
        "auto_merge_if_approved": false
      },
      "release_coordination": {
        "enabled": true,
        "cascade_updates": true,
        "update_dependents": true
      }
    },
    "schedule": {
      "sprint_planning": "0 12 * * 1",
      "roadmap_update": "0 12 1 * *",
      "health_check": "0 6 * * *"
    }
  },

  "documentation": {
    "lookup_strategy": "context7",
    "sources": {
      "python": {
        "base_url": "https://github.com/jbcom",
        "doc_paths": [
          "{repo}/docs/",
          "{repo}/README.md"
        ]
      },
      "typescript": {
        "base_url": "https://github.com/jbcom",
        "doc_paths": [
          "{repo}/docs/",
          "{repo}/README.md"
        ]
      }
    }
  }
}
