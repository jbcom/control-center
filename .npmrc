# pnpm configuration
# See: https://pnpm.io/npmrc

# Use workspace protocol for local packages (like UV does for Python)
link-workspace-packages = true

# Save exact versions (similar to UV's lock file behavior)
save-exact = true

# Strict peer dependencies
strict-peer-dependencies = false

# Auto-install peers
auto-install-peers = true

# Shared node_modules across workspace
shared-workspace-lockfile = true

# Store directory (can be customized)
# store-dir = ~/.pnpm-store

# Registry configuration
# registry = https://registry.npmjs.org/
